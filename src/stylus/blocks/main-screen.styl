.main-screen
  width 100%
  position relative
  @media (max-width: 768px)
    background url(../images/bg-mobile.jpg) no-repeat fixed
    background-size cover

  &__inner
    height 100vh
    width 100vw
    display flex
    justify-content center
    flex-direction column
    font-family: 'Roboto', sans-serif
    font-weight 500
    text-transform uppercase
    top 0
    background: -moz-radial-gradient(ellipse at center, rgba(0, 0, 0, 0) 0%,rgba(18, 24, 27, 0.05) 75%,rgba(40, 52, 59, 0.96) 100%) /* FF3.6-15 */
    background: -webkit-radial-gradient(ellipse at center, rgba(0, 0, 0, 0) 0%,rgba(18, 24, 27, 0.05) 75%,rgba(40, 52, 59, 0.96) 100%) /* Chrome10-25,Safari5.1-6 */
    background radial-gradient(ellipse at center, rgba(0,0,0,0) 0%, rgba(18,24,27,0.4) 45%, rgba(40,52,59,1) 100%)

  &__wrapper
    max-width 1200px
    margin 0 auto
    padding-left 150px
    @media (min-width: 993px) and (max-width: 1200px)
      max-width 100%
    @media (min-width: 769px) and (max-width: 992px)
      padding-left 0
    @media (max-width: 768px)
      padding-left 0
    & br
      @media (max-width: 768px)
        display none

  &__title
    font-size 42px
    font-weight 500
    text-align left
    color: #fff;
    letter-spacing 0.03em
    line-height 1.3em
    background rgba(0, 0, 0, 0.50)
    padding: 10px 12px 8px 12px
    display block
    @media (min-width: 993px) and (max-width: 1200px)
      font-size 33px
    @media (min-width: 769px) and (max-width: 992px)
      font-size 30px
      padding-bottom 1px
    @media (max-width: 768px)
      font-size 20px
      display block
      text-align center

  &__text-content
    font-size 30px
    text-align left
    display inline
    background rgba(0, 0, 0, 0.50)
    padding 0px 12px 2px 12px
    @media (min-width: 993px) and (max-width: 1200px)
      font-size 27px
    @media (max-width: 768px)
      font-size 15px
      display block
      text-align center
    &:last-child
      line-height 1.8em
      padding 6px 12px 7px 12px

